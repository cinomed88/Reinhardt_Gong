<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:rowCount="5"
    android:columnCount="2">

    <TextView
        android:id="@+id/tv_month"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_month"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_DSN_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_DSN_text"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_DSN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_systolic_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_systolic_text"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_systolic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_diastolic_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_diastolic_text"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_diastolic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_avgCondition_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_avgCondition_text"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_avgCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_margin="5dp"/>


</GridLayout>